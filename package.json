{
  "name": "magik-vs-code",
  "displayName": "magik-vs-code",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "magik",
        "extensions": [".magik"],
        "configuration": "./magik-language-configuration.json"
      }
    ],
    "notebooks": [
      {
        "type": "magik-notebook",
        "displayName": "Magik Notebook",
        "selector": [
          {
            "filenamePattern": "*.magik-notebook"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "magik-vs-code.startSession",
        "title": "Magik: Start Session"
      },
      {
        "command": "magik-vs-code.selectLayeredProduct",
        "title": "Magik: Select Layered Product"
      },
      {
        "command": "magik-vs-code.selectGisAlias",
        "title": "Magik: Select GIS Alias"
      },
      {
        "command": "magik-vs-code.sendSectionToSession",
        "title": "Magik: Send Section To Session",
        "enablement": "false"
      },
      {
        "command": "magik-vs-code.pingSession",
        "title": "Magik: Ping Session"
      }
    ],
    "configuration": {
      "title": "Magik VS Code settings",
      "properties": {
        "magik-vs-code.gisVersions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the GIS installation."
              },
              "version": {
                "type": "string",
                "description": "GIS version."
              },
              "path": {
                "type": "string",
                "description": "Path to the 'core' directory of the GIS installation"
              }
            },
            "required": [
              "name",
              "version",
              "path"
            ],
            "additionalProperties": false
          },
          "default": [],
          "description": "A collection of GIS versions which can be used to start a session."
        },
        "magik-vs-code.sanitizeSessionOutput": {
          "type": "boolean",
          "default": true,
          "description": "Controls if the session output displays lines like 'Magik>' and 'True 0'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
