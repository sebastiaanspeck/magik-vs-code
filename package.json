{
  "name": "magik-vs-code",
  "displayName": "magik-vs-code",
  "author": {
    "name": "Party-Toast"
  },
  "publisher": "Party-Toast",
  "description": "Magik language support for VS Code, including session, notebooks, and a Class Browser.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Party-Toast/magik-vs-code"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Notebooks"
  ],
  "keywords": [
    "Magik"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "magik",
        "extensions": [
          ".magik"
        ],
        "configuration": "./magik-language-configuration.json"
      }
    ],
    "notebooks": [
      {
        "type": "magik-notebook",
        "displayName": "Magik Notebook",
        "selector": [
          {
            "filenamePattern": "*.magik-notebook"
          }
        ]
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "magik-vs-code.classBrowser",
          "name": "Magik Class Browser"
        }
      ]
    },
    "commands": [
      {
        "command": "magik-vs-code.startSession",
        "title": "Magik: Start Session"
      },
      {
        "command": "magik-vs-code.killSession",
        "title": "Magik: Kill Session"
      },
      {
        "command": "magik-vs-code.showSession",
        "title": "Magik: Show Session"
      },
      {
        "command": "magik-vs-code.selectLayeredProduct",
        "title": "Magik: Select Layered Product"
      },
      {
        "command": "magik-vs-code.selectGisAlias",
        "title": "Magik: Select GIS Alias"
      },
      {
        "command": "magik-vs-code.sendSectionToSession",
        "title": "Magik: Send Section To Session",
        "enablement": "false"
      },
      {
        "command": "magik-vs-code.sendSectionAtCurrentPositionToSession",
        "title": "Magik: Send Section at Current Position to Session"
      },
      {
        "command": "magik-vs-code.sendFileToSession",
        "title": "Magik: Send File to Session"
      },
      {
        "command": "magik-vs-code.showClassBrowser",
        "title": "Magik: Show Class Browser"
      },
      {
        "command": "magik-vs-code.searchClassBrowser",
        "title": "Magik: Search in Class Browser"
      }
    ],
    "keybindings": [
      {
        "command": "magik-vs-code.showSession",
        "key": "f2 z",
        "when": "magik-vs-code.sessionIsActive"
      },
      {
        "command": "magik-vs-code.sendSectionAtCurrentPositionToSession",
        "key": "f2 enter",
        "when": "magik-vs-code.sessionIsActive && resourceLangId == magik"
      },
      {
        "command": "magik-vs-code.sendFileToSession",
        "key": "f2 b",
        "when": "magik-vs-code.sessionIsActive && resourceLangId == magik"
      },
      {
        "key": "f2 p",
        "command": "notebook.focusPreviousEditor",
        "when": "magik-vs-code.sessionIsActive && config.notebook.navigation.allowNavigateToSurroundingCells && editorTextFocus && inputFocus && notebookEditorFocused && !accessibilityModeEnabled && !isEmbeddedDiffEditor"
      },
      {
        "key": "alt+p",
        "command": "notebook.focusPreviousEditor",
        "when": "magik-vs-code.sessionIsActive && config.notebook.navigation.allowNavigateToSurroundingCells && editorTextFocus && inputFocus && notebookEditorFocused && !accessibilityModeEnabled && !isEmbeddedDiffEditor"
      },
      {
        "key": "f2 n",
        "command": "notebook.focusNextEditor",
        "when": "magik-vs-code.sessionIsActive && config.notebook.navigation.allowNavigateToSurroundingCells && editorTextFocus && inputFocus && notebookEditorFocused && !accessibilityModeEnabled && !isEmbeddedDiffEditor"
      },
      {
        "key": "alt+n",
        "command": "notebook.focusNextEditor",
        "when": "magik-vs-code.sessionIsActive && config.notebook.navigation.allowNavigateToSurroundingCells && editorTextFocus && inputFocus && notebookEditorFocused && !accessibilityModeEnabled && !isEmbeddedDiffEditor"
      },
      {
        "key": "f8",
        "command": "notebook.cell.execute",
        "when": "magik-vs-code.sessionIsActive && notebookCellListFocused && notebookMissingKernelExtension && !notebookCellExecuting && notebookCellType == 'code' && notebookType == magik-notebook || magik-vs-code.sessionIsActive && notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelCount > 0 && notebookType == magik-notebook || magik-vs-code.sessionIsActive && notebookCellListFocused && !notebookCellExecuting && notebookCellType == 'code' && notebookKernelSourceCount > 0 && notebookType == magik-notebook"
      },
      {
        "key": "f3 f3",
        "command": "magik-vs-code.showClassBrowser",
        "when": "magik-vs-code.sessionIsActive"
      }
    ],
    "configuration": {
      "title": "Magik VS Code settings",
      "properties": {
        "magik-vs-code.gisVersions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the GIS installation."
              },
              "version": {
                "type": "string",
                "description": "GIS version."
              },
              "path": {
                "type": "string",
                "description": "Path to the 'core' directory of the GIS installation"
              }
            },
            "required": [
              "name",
              "version",
              "path"
            ],
            "additionalProperties": false
          },
          "default": [],
          "description": "A collection of GIS versions which can be used to start a session."
        },
        "magik-vs-code.classBrowserMaxResults": {
          "type": "number",
          "minimum": 1,
          "maximum": 20000,
          "default": 200,
          "description": "Max amount of search results form the Magik class browser."
        },
        "magik-vs-code.createCellAfterExecution": {
          "type": "boolean",
          "default": true,
          "description": "Create a new cell below the bottom cell after its execution is done."
        },
        "magik-vs-code.copyContentOnCellCreation": {
          "type": "boolean",
          "default": true,
          "description": "When a new cell is created, determines if the contents of the previous cell are copied."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.105.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44"
  }
}
